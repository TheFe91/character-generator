<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>D&D Bot Suite - Character Creator</title>

    <link href="{{ asset('bundles/app/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .modal-confirm {
            color: #434e65;
            width: 525px;
        }
        .modal-confirm .modal-content {
            padding: 20px;
            font-size: 16px;
            border-radius: 5px;
            border: none;
        }
        .modal-confirm .modal-header {
            border-bottom: none;
            position: relative;
            text-align: center;
            margin: -20px -20px 0;
            border-radius: 5px 5px 0 0;
            padding: 35px;
        }
        .modal-header-error {
            background: #e85e6c;
        }
        .modal-header-success {
            background: #67e85e;
        }
        .modal-confirm h4 {
            text-align: center;
            font-size: 36px;
            margin: 10px 0;
        }
        .modal-confirm .form-control, .modal-confirm .btn {
            min-height: 40px;
            border-radius: 3px;
        }
        .modal-confirm .close {
            position: absolute;
            top: 15px;
            right: 15px;
            color: #fff;
            text-shadow: none;
            opacity: 0.5;
        }
        .modal-confirm .close:hover {
            opacity: 0.8;
        }
        .modal-confirm .icon-box {
            color: #fff;
            width: 95px;
            height: 95px;
            display: inline-block;
            border-radius: 50%;
            z-index: 9;
            border: 5px solid #fff;
            padding: 15px;
            text-align: center;
        }
        .modal-confirm .icon-box i {
            font-size: 58px;
            margin: -2px 0 0 -2px;
        }
        .modal-confirm.modal-dialog {
            margin-top: 80px;
        }
        .modal-confirm .btn, .modal-confirm .btn:active {
            color: #fff;
            border-radius: 4px;
            background: #eeb711 !important;
            text-decoration: none;
            transition: all 0.4s;
            line-height: normal;
            border-radius: 30px;
            margin-top: 10px;
            padding: 6px 20px;
            min-width: 150px;
            border: none;
        }
        .modal-confirm .btn:hover, .modal-confirm .btn:focus {
            background: #eda645 !important;
            outline: none;
        }
    </style>

</head>

<body>

    <div id="page-content">

        <form id="page_form">
            <div class="container-fluid">
                <div class="row mt-4">
                    <div class="col-3">
                        <h1>Character Creator</h1>
                    </div>
                    <div class="col-3">
                        <label for="access_code">Password given by D&D 3.5 Character Generator Discord Bot</label>
                        <input class="form-control" type="password" name="access_code" id="access_code" placeholder="Enter your access code">
                    </div>
                    <div class="col-2">
                        <button type="button" class="btn btn-success" id="submit">SAVE</button>
                    </div>
                </div>

                <hr/>

                {% include '@App/character.twig' %}

                <hr/>

                <h3 class="mt-2">Stats</h3>

                {% include '@App/stats/stats.twig' %}
            </div>
        </form>
    </div>

    {% include '@App/modal/errorModal.twig' %}
    {% include '@App/modal/successModal.twig' %}

<script src="{{ asset('bundles/app/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('bundles/app/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

<script>

    const page_form = $('#page_form');
    const submit = $('#submit');
    const initiative_misc = $('#initiative_misc');
    const con_score = $('#con-score');
    const dex_score = $('#dex-score');
    const wis_score = $('#wis-score');
    const ac_vals = $('.ac-vals');
    const fortitude_vals = $('.fortitude-vals');
    const reflex_vals = $('.reflex-vals');
    const will_vals = $('.will-vals');
    const fortitude_ability_modifier = $('#fortitude_ability_modifier');
    const reflex_ability_modifier = $('#reflex_ability_modifier');
    const will_ability_modifier = $('#will_ability_modifier');

    const calcInitiative = () => {
        $('#initiative').text(Number($('#initiative_dex').text()) + Number(initiative_misc.val()));
    }

    const calcFortitude = () => {
        let total = Number(fortitude_ability_modifier.text());
        $.each(fortitude_vals, (_, el) => total += Number($(el).val()));
        $('#fortitude').text(total);
    };

    const calcReflex = () => {
        let total = Number(reflex_ability_modifier.text());
        $.each(reflex_vals, (_, el) => total += Number($(el).val()));
        $('#reflex').text(total);
    };

    const calcWill = () => {
        let total = Number(will_ability_modifier.text());
        $.each(will_vals, (_, el) => total += Number($(el).val()));
        $('#will').text(total);
    };

    const calcAC = () => {
        let total = 10 + Number(reflex_ability_modifier.text());
        $.each(ac_vals, (_, el) => total += Number($(el).val()));
        $('#ac').text(total);
    };

    $('.scores').on('input', function() {
        const targetId = $(this).attr('id').replaceAll('-score', '-modifier');
        const modifierValue = Math.floor((Number($(this).val()) - 10) / 2);
        $(`#${targetId}`).text(modifierValue);
    });

    con_score.on('input', function () {
        const val = Math.floor((Number($(this).val()) - 10) / 2);
        fortitude_ability_modifier.text(val);
        calcFortitude();
    });

    wis_score.on('input', function () {
        const val = Math.floor((Number($(this).val()) - 10) / 2);
        will_ability_modifier.text(val);
        calcWill();
    });

    dex_score.on('input', function() {
        const val = Math.floor((Number($(this).val()) - 10) / 2);
        $('#ac_dex').text(val);
        $('#initiative_dex').text(val);
        reflex_ability_modifier.text(val);
        calcInitiative();
        calcReflex();
        calcAC();
    });

    ac_vals.on('input', calcAC);

    initiative_misc.on('input', calcInitiative);

    fortitude_vals.on('input', calcFortitude);

    reflex_vals.on('input', calcReflex);

    will_vals.on('input', calcWill);

    submit.on('click', () => {
        if ($('#access_code').val() === '') {
            $('#errorMessage').text('The access code is empty!');
            $('#errorModal').modal('show');
            return;
        }
        $.post(
            '{{ url('characterSubmitted_url') }}',
            page_form.serialize(),
            (data) => {
                if (data.code === 'KO') {
                    $('#errorMessage').text(data.message);
                    $('#errorModal').modal('show');
                }
                else {
                    $('#successModal').modal('show');
                }
            }
        );
    });
</script>

</body>

</html>
